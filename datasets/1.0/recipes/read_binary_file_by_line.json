  "distribution": [
    {
      "@type": "cr:FileSet",
      "name": "languages_in_directory",
      "description": "Binary files containing the expression \"hello\" translated in several languages.",
      "encodingFormat": "text/plain",
      "includes": "data/read_binary_file_by_line/*.txt"
    },
    {
      "@type": "cr:FileObject",
